# ðŸŸ¢ SAFE MODE BLOCK (Hardcoded Message) ðŸŸ¢
                if rule.get('rule_name') == 'portin-check':
                    print("\nðŸ›‘ --- DEBUGGING PORT-IN (SAFE MODE) ---")
                    
                    # 1. Manual Extraction
                    port_in_status = '0'
                    try:
                        if 'api_result_RULE_200' in self.current_context:
                            data = self.current_context['api_result_RULE_200'].get('response_data', {})
                            if 'orderDetails' in data:
                                port_in_status = str(data['orderDetails'].get('portIn', '0'))
                    except:
                        port_in_status = '0'

                    print(f"   ðŸ” Extracted Status: {port_in_status}")
                    
                    # 2. Logic Decision
                    clean_status = str(port_in_status).lower().strip()
                    
                    # Case A: Normal/Active -> CONTINUE
                    if clean_status in ['0', 'false', 'none', '', 'null', 'a']:
                        print("   âœ… Status is Normal/Active. Forcing Continue.")
                        result = True 
                    
                    # Case B: Pending/Error -> STOP & SEND MESSAGE
                    else:
                        print("   ðŸŽ¯ Status is Pending. Sending Message (Hardcoded).")
                        
                        # HARDCODED MESSAGE to avoid 'NoneType' error in DB function
                        safe_msg = "Dear User, Port in order found, We will review the port in status and process the activation."
                        
                        return {
                            "status": "SUCCESS",
                            "message": safe_msg,
                            "response": safe_msg,
                            "rule_id": rule['rule_id']
                        }
                    print("ðŸ›‘ --- END DEBUGGING ---\n")
                # ðŸŸ¢ END SAFE MODE BLOCK ðŸŸ¢
