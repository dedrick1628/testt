-- Link the Failure Path of B2B check to your new Port In Rule
UPDATE CXP_OPS_MONITORING.TEST_CXP_STORE_SUPPORT_RULE_AYS_NP
SET RULE_NEXT_STEP = 'RULE_300'
WHERE RULE_NAME = 'b2b-customer-check' 
AND EXPECTED_VALUE = 'False';  -- This targets the negative scenario row


UPDATE CXP_OPS_MONITORING.TEST_CXP_STORE_SUPPORT_RULE_AYS_NP
SET RULE_NEXT_STEP = 'RULE_300'
WHERE RULE_NAME = 'b2b-customer-check';
